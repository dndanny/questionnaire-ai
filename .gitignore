const fs = require('fs');
const path = require('path');

let projectDir = process.cwd();
if (fs.existsSync(path.join(projectDir, 'quizai'))) {
    projectDir = path.join(projectDir, 'quizai');
}

console.log(`\x1b[36mCreating .gitignore in ${projectDir}...\x1b[0m`);

const gitignoreContent = `
# Dependencies
/node_modules
/.pnp
.pnp.js

# Testing
/coverage

# Next.js
/.next/
/out/
# It is recommended to commit next-env.d.ts, but if you prefer to ignore it:
# next-env.d.ts

# Production
/build

# Misc
.DS_Store
*.pem

# Debug
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment Variables (CRITICAL: Do not commit these)
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Vercel
.vercel

# TypeScript
*.tsbuildinfo

# IDEs
.idea
.vscode
*.swp
*.swo

# OS
Thumbs.db
`;

fs.writeFileSync(path.join(projectDir, '.gitignore'), gitignoreContent.trim());

console.log(`\x1b[32mSuccess! .gitignore created.\x1b[0m`);